{
  "name": "cgm-workflow",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "api:dev": "npm --prefix apps/api run start:dev",
    "api:build": "npm --prefix apps/api run build",
    "api:start": "npm --prefix apps/api run start:prod",
    "db:generate": "npm --prefix apps/api run db:generate",
    "db:migrate:dev": "npm --prefix apps/api run db:migrate:dev",
    "db:migrate:deploy": "npm --prefix apps/api run db:migrate:deploy",
    "db:studio": "npm --prefix apps/api run db:studio",
    "db:seed": "npm --prefix apps/api run db:seed",
    "web:dev": "npm --prefix apps/web run dev",
    "web:build": "npm --prefix apps/web run build",
    "web:start": "npm --prefix apps/web run start",
    "lint": "npm --prefix apps/web run lint && npm --prefix apps/api run lint",
    "test": "npm --prefix apps/api run test"
  }
}
